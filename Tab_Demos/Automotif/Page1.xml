<?xml version="1.0" encoding="UTF-8"?>
<rfapp xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://developer.redfoundry.com/rfml.xsd">
	<views>
		<view>
			<actions>
				<modify on="appeared">
					<property name="widget-id">BGWidget</property>
					<values>
						<property name="left-position">0</property>
					</values>
				</modify>
				<modify on="appeared">
					<property name="widget-id">BGWidget</property>
					<property name="duration">20.0</property>
					<values>
						<property name="left-position">-350</property>
					</values>
				</modify>
			</actions>
			<widgets>
				<RFImageWidget id="BGWidget">
					<property name="image">/resources/page1-bg.jpg</property>
					<property name="width">1365</property>
					<property name="height">1024</property>
					<property name="layout-type">float</property>
				</RFImageWidget>
				<RFImageWidget>
					<property name="image">/resources/issue-title.png</property>
					<property name="layout-type">float</property>
					<property name="vertical-alignment">bottom</property>
					<property name="width">770</property>
					<property name="height">177</property>
				</RFImageWidget>
				<RFImageWidget id="Edition">
					<property name="image">/resources/edition.png</property>
					<property name="layout-type">float</property>
					<property name="vertical-alignment">top</property>
					<property name="width">23</property>
					<property name="height">363</property>
				</RFImageWidget>
			</widgets>
		</view>
	</views>
</rfapp>
