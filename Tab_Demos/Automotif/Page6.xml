<?xml version="1.0" encoding="UTF-8"?>
<rfapp xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://developer.redfoundry.com/rfml.xsd">
	<views>
		<view>
			<widgets>
				<RFImageWidget id="BGWidget">
					<property name="image">resources/page6-bg.jpg</property>
					<property name="width">1365</property>
					<property name="height">1024</property>
					<property name="layout-type">float</property>
					<property name="left-position">-300</property>
					<actions>
						<modify on="load">
							<property name="widget-id">BGWidget</property>
							<values>
								<property name="width">1365</property>
								<property name="height">1024</property>
							</values>
						</modify>
						<modify on="load">
							<property name="widget-id">BGWidget</property>
							<property name="duration">10.0</property>
							<values>
								<property name="width">1565</property>
								<property name="height">1224</property>
							</values>
						</modify>
					</actions>
				</RFImageWidget>
				<RFVerticalLayoutWidget id="TextWidget">
					<property name="background-color">#000000</property>
					<property name="height">65%</property>
					<property name="width">100%</property>
					<property name="vertical-alignment">top</property>
					<property name="layout-type">float</property>
					<widgets>
						<RFTextLabel>
							<property name="text">LAUNCH</property>
							<property name="font">Helvetica-Bold:20</property>
							<property name="alignment">right</property>
							<property name="top-position">88%</property>
							<property name="layout-type">absolute</property>
						</RFTextLabel>
						<RFTextLabel>
							<property name="text">control</property>
							<property name="font">Helvetica-Bold:15</property>
							<property name="color">#FFFFFF55</property>
							<property name="alignment">right</property>
							<property name="top-position">91%</property>
							<property name="layout-type">absolute</property>
						</RFTextLabel>
					</widgets>
				</RFVerticalLayoutWidget>
			</widgets>
		</view>
	</views>
</rfapp>
